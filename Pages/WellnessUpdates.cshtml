@page
@model MedUnity.Pages.WellnessUpdatesModel

<h2 class="fs-1 fw-bold text-uppercase">Wellness Updates</h2>

@* Loop through all updates and display as individual articles *@
@foreach (var update in Model.AllUpdates)
{

    <article class="update-article d-flex gap-4">

        @if (!string.IsNullOrEmpty(update.ImagePath))
        {
            <div class="image-wrapper flex-shrink-0">
                <img src="@update.ImagePath" alt="@update.Title" class="update-image" />
                <a href="@update.ImagePath" target="_blank" class="view-full-btn">↗</a>
            </div>
        }

        <div class="update-body">
            <h1 class="update-title text-uppercase fw-bold">@update.Title</h1>

            <p class="update-content">@update.Content</p>

            @if (!string.IsNullOrEmpty(update.SourceUrl))
            {
                <p class="update-source">
                    <a href="@update.SourceUrl" target="_blank">Source</a>
                </p>
            }

            <p class="update-time">
                <small>@update.CreatedAt.ToString("yyyy-MM-dd HH:mm")</small>
            </p>
        </div>

    </article>



}
