@page
@model MedUnity.Pages.WellnessUpdatesModel

@* Loop through all updates and display as individual articles *@
@foreach (var update in Model.AllUpdates)
{
    <article>
       
        <h1>@update.Title</h1>

       
        @if (!string.IsNullOrEmpty(update.ImagePath))
        {
            <img src="@update.ImagePath" alt="@update.Title" style="max-width:100%; height:auto;" />
        }

        
        <p>@update.Content</p>

        
        @if (!string.IsNullOrEmpty(update.SourceUrl))
        {
            <p><a href="@update.SourceUrl" target="_blank">Source</a></p>
        }

       
        <p><small>@update.CreatedAt.ToString("yyyy-MM-dd HH:mm")</small></p>
        <hr />
    </article>
}
