@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}
<div class="home-hero">
    <div class="home-card text-center">
        <h1 class="home-title text-uppercase">Welcome to MedUnity</h1>

        <p class="home-text">
            Health is a holistic concept defined as a state of complete physical, mental,
            and social well-being — not merely the absence of disease.
            It empowers individuals to manage stress, realize their abilities,
            and contribute meaningfully to society.
        </p>

        <div class="home-highlights">
            <ul class="bg-black navbar-nav rounded-pill pe-2 ps-2">
                @if (!User.Identity.IsAuthenticated){
                
                    <li class="nav-item">
                        <a class="nav-link fs-6 fw-bold text-white" asp-area="" asp-page="/Login">Login</a>
                    </li>
                }
            </ul>
        </div>
    </div>
</div>
