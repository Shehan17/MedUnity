@page
@model MedUnity.Pages.LoginModel
@{

    ViewData["Title"] = "Registration Form";

}

<h3>Registration Form</h3>


<form method="post" >
    <div class="mt-3">
        <label class="fw-bold">Birth Day</label>
        <input class="form-select" asp-for= "DOB" type="date" required />
    </div>
   
    <div class="mt-3">
        <label class=" fw-bold">First Name</label>
            <input type="text" asp-for="FirstName" class="form-control" placeholder="First Name" />
    </div>

    <div class="mt-3">
            <label class="fw-bold">Last Name</label>
            <input type="text" asp-for="LastName" class="form-control" placeholder="Last Name" />
    </div>


     <div class="mt-3">
            <label class="fw-bold ">Email</label>
            <input type="email" asp-for="Email" class="form-control" placeholder="Email" required />
    </div>

    <div class="mt-3">
            <label class=" fw-bold">Password</label>
            <input type="password" asp-for="password" class="form-control"placeholder="Enter a strong password" required />
    </div>

    <div class="mt-3">
            <label class="fw-bold">Phone Number</label>
            <input type ="number" asp-for="PhoneNumber" class="form-control" placeholder="Phone number" />
    </div>

    <div class="mt-3">
        <label class="fw-bold">Special Note</label>
        <input type="text" class="form-control" placeholder="Leave a note" />
    </div>

  
    <div class="text-center">
            <button type = "submit" class="btn dark-submit rounded-pill mt-4 w-50 ">
                Place Appointment
            </button>
        </div>
</form>