@page
@model ManageWellnessUpdateModel
@{
    ViewData["Title"] = "MangeWellness";
}

<center>

    <h4> Create Health Update </h4>

    <div class="manwellfrom">
        <form method="post" enctype="multipart/form-data">

            <div class="manwelltitle">
                <strong>Title</strong>
                <input asp-for="WellnessUpdate.Title" placeholder="Title" />
                <span asp-validation-for="WellnessUpdate.Title"></span>
            </div>

            <br />

            <div class="manwellcontext">
                <strong>Content</strong>
                <textarea asp-for="WellnessUpdate.Content" rows="4"></textarea>
                <span asp-validation-for="WellnessUpdate.Content"></span>
            </div>

            <br />

            <div class="manwellimg">
                <strong>Add Image</strong>
                <input type="file" asp-for="ImageFile" accept="image/png, image/jpeg" />
            </div>

            <br />

            <div class="manwellsource">
                <strong>Source</strong>
                <input asp-for="WellnessUpdate.SourceUrl" />
                <span asp-validation-for="WellnessUpdate.SourceUrl"></span>
            </div>

            <br />
            <button type="submit">Submit</button>

        </form>
    </div>

    <br /><br />
    <h4>All Wellness Updates</h4>

    <table border="1" cellpadding="5" cellspacing="0" width="80%">
        <thead>
            <tr>
                <th>Title</th>
                <th>Content</th>
                <th>Image</th>
                <th>Source</th>
                <th>Created At</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.AllUpdates)
            {
                <tr>
                    <td>@item.Title</td>
                    <td>@(item.Content.Length > 100 ? item.Content.Substring(0, 100) + "..." : item.Content)</td>
                    <td>
                        @if (!string.IsNullOrEmpty(item.ImagePath))
                        {
                            <img src="@item.ImagePath" width="100" />
                        }
                        else
                        {
                            <span>No Image</span>
                        }
                    </td>
                    <td>
                        @if (!string.IsNullOrEmpty(item.SourceUrl))
                        {
                            <a href="@item.SourceUrl" target="_blank">Link</a>
                        }
                        else
                        {
                            <span>-</span>
                        }
                    </td>
                    <td>@item.CreatedAt.ToString("yyyy-MM-dd HH:mm")</td>
                    <td>
                        <button type="button" onclick="openEdit(@item.WellnessUpdateId)">Edit</button>
                        <button type="button" onclick="openDelete(@item.WellnessUpdateId, '@item.Title')">Delete</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div id="editModal" style="display:none; position:fixed; top:20%; left:35%; width:30%; background:#fff; border:1px solid #000; padding:15px;">
        <h4>Edit Wellness Update</h4>
       
        <form method="post" asp-page-handler="Edit" enctype="multipart/form-data" id="editForm">
            <input type="hidden" id="editId" name="WellnessUpdateId" />
            <div>
                <strong>Title</strong>
                <input type="text" id="editTitle" name="Title" />
            </div>
            <div>
                <strong>Content</strong>
                <textarea id="editContent" name="Content" rows="4"></textarea>
            </div>
            <div>
                <strong>Source</strong>
                <input type="text" id="editSourceUrl" name="SourceUrl" />
            </div>
            <div>
                <strong>Image</strong>
                <input type="file" id="editImageFile" name="ImageFile" />
            </div>
            <br />
            <button type="submit">Save</button>
            <button type="button" onclick="closeEdit()">Cancel</button>
        </form>
    </div>


    <div id="deleteModal" style="display:none; position:fixed; top:30%; left:35%; width:30%; background:#fff; border:1px solid #000; padding:15px;">
        <h4>Delete Wellness Update</h4>
        <p>Are you sure you want to delete <span id="deleteTitle"></span>?</p>
        
        <form method="post" asp-page-handler="Delete" id="deleteForm">
            <input type="hidden" id="deleteId" name="WellnessUpdateId" />
            <button type="submit">Yes, Delete</button>
            <button type="button" onclick="closeDelete()">Cancel</button>
        </form>
    </div>

</center>
<script>
   
    const allUpdates = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.AllUpdates));

    
    function openEdit(id) {
        const update = allUpdates.find(x => x.WellnessUpdateId === id);
        if (!update) return;

        document.getElementById('editId').value = update.WellnessUpdateId;
        document.getElementById('editTitle').value = update.Title;
        document.getElementById('editContent').value = update.Content;
        document.getElementById('editSourceUrl').value = update.SourceUrl || '';

        document.getElementById('editModal').style.display = 'block';
    }

    function closeEdit() {
        document.getElementById('editModal').style.display = 'none';
    }

    
    function openDelete(id, title) {
        document.getElementById('deleteId').value = id;
        document.getElementById('deleteTitle').innerText = title;
        document.getElementById('deleteModal').style.display = 'block';
    }

    function closeDelete() {
        document.getElementById('deleteModal').style.display = 'none';
    }
</script>
