<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MedUnity</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MedUnity.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3 fixed-top">
            <div class="container">
                <a class="navbar-brand fw-bolder" asp-area="" asp-page="/Index">MedUnity</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1 me-auto ms-auto">
                   
                        @if (User.Identity.IsAuthenticated){

                            if (User.IsInRole("Patient"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link  glow-link" asp-area="" asp-page="/BookAppointment">Appointment</a>
                                </li>

                                <li class="nav-item">
                                    <a class="nav-link  glow-link" asp-area="" asp-page="/MyAppointments">MyAppointment</a>
                                </li>

                            }
                            else
                            {
                                <li class="nav-item">
                                    <a class="nav-link  glow-link" asp-area="" asp-page="/ManageAppointments">ManageAppointment</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link  glow-link" asp-area="" asp-page="/ManageWellnessUpdate">ManageWelnessUpades</a>
                                </li>
                            }

                            }
                           
                        
                        <li class="nav-item">
                            <a class="nav-link  glow-link " asp-area="" asp-page="/WellnessUpdates">WellnessUpdate</a>
                        </li>

                    </ul>
                    <ul class="bg-black navbar-nav rounded-pill pe-2 ps-2">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle fs-6 fw-bold text-white"
                                   href="#"
                                   id="userDropdown"
                                   role="button"
                                   data-bs-toggle="dropdown"
                                   aria-expanded="false">
                                    @User.Identity.Name
                                </a>

                                <ul class="dropdown-menu dropdown-menu-end shadow" aria-labelledby="userDropdown">
                                    <li>
                                        <form method="post" asp-page="/Login" asp-page-handler="Logout">
                                            <button type="submit" class="dropdown-item text-danger fw-bold">
                                                Logout
                                            </button>
                                        </form>
                                    </li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link fs-6 fw-bold text-white" asp-area="" asp-page="/Login">Login</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2026 - MedUnity - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>